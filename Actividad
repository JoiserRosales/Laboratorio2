//Uso del printf y scanf

#include <stdio.h>
#include <math.h>

int main()
{
        int elecion, a, b, res;
        float divR, fa, fb ;
        printf("Ingrese uno de los siguientes casos: \n [1]: Suma\n [2]: Resta\n [3]: Multiplicación\n [4]: División\n\n>>> "); scanf("%d",&elecion);

        printf("ingresar el valor del primer número: "); scanf("%d",&a);
        printf("ingresar el valor del segundo número: "); scanf("%d",&b);
        fa = a;
        fb = b;
        printf("\n");

        switch(elecion){
          case 1: {  
            res = a + b;
            printf("Resultado de la suma es: %d", res);
            break;
          }
          case 2: {  
            res = a - b;
            printf("Resultado de la resta es: %d", res);
            break;
          }
          case 3: {  
            res = a * b;
            printf("Resultado de la multiplicación es: %d", res);
            break;
          }
          case 4: {
            res = a / b;
            divR = fa / fb;
            printf("Resultado  con número entero de la división es: %d \n", res);
            printf("Resultado con número decimal de la división es: %.2f",divR);
            break;
          }
          default: printf("La opción no es valida, intente con otra");
        }

        return 0;
}
